<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper  
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
   
<mapper namespace="wefun.dao.mysql.InformationDAO">  

     <insert id="insert" useGeneratedKeys="true" keyProperty="id" parameterType="wefun.model.po.InformationPO">
     	insert into information 
     		(email,address,phone,wechat,qq,qrCodeWechat,qrCodeQQ,createTime,updateTime)
     	values
     		(#{email},#{address},#{phone},#{wechat},#{qq},#{qrCodeWechat},#{qrCodeQQ},now(),now())
     </insert>
     
     <select id="get" resultType="wefun.model.po.InformationPO" >
         select * from information 
     </select>
     
     <update id="update" parameterType="wefun.model.po.InformationPO">
         update information
         
         <set>
         email = #{email},
         address = #{address},
         phone = #{phone},
         wechat = #{wechat},
         qq = #{qq},
         qrCodeWechat = #{qrCodeWechat},
         qrCodeQQ = #{qrCodeQQ},
         updateTime = now()
         </set>
         
         <where>
         `id` = #{id}
         </where>
     </update>
    
</mapper> 